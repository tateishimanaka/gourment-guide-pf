<div class="container mt-4 mb-5">
  <div class="row">
    <h4><%= @shop.shop_name %></h4>
  </div>
  <div class="row">
    <%= @shop.shop_name_kana %>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h5><i class="fas fa-heart"></i><%= @shop.favorites.count %></h5>
    </div>
    <div class="col-md-2">

    </div>
  </div>
  <div class="row mt-4">
    <div class="mx-auto">
       <%= attachment_image_tag @shop, :image, :fill, 400, 300, format: 'jpeg', class: "rounded" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-10 offset-md-2">
      <%= link_to "Menu List", restaurant_menus_path, class: "btn btn-outline-warning" %>
      <%= link_to "Menu新規登録", new_restaurant_menu_path, class: "btn btn-outline-warning" %>
      <%= link_to "席タイプ一覧", restaurant_seats_path, class: "btn btn-outline-warning" %>
      <%= link_to "席タイプ新規登録", new_restaurant_seat_path, class: "btn btn-outline-warning" %>
      <%= link_to "基本情報を編集する", edit_restaurant_shops_path, class: "btn btn-outline-warning" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-7">
      <span class="badge badge-secondary">
        <h5>基本情報</h5>
      </span>
      <table class="table table-borderless">
        <tbody>
        <tr>
          <th scope="row">電話番号</th>
          <td><%= @shop.telephone_number %></td>
        </tr>
        <tr>
          <th scope="row">営業時間</th>
          <td><%= @shop.opening_hours %></td>
        </tr>
        <tr>
          <th scope="row">定休日</th>
          <td><%= @shop.holiday %></td>
        </tr>
        <tr>
          <th scope="row">住所</th>
          <td>
            〒<%= @shop.postal_code %><br>
            <%= @shop.address %>
          </td>
        </tr>
        <tr>
          <th scope="row">アクセス</th>
          <td><%= @shop.access %></td>
        </tr>
        <tr>
          <th scope="row">ジャンル</th>
          <td><%= @shop.genre %></td>
        </tr>
        <tr>
          <th scope="row">予約可否</th>
          <td><%= @shop.reserve_i18n %></td>
        </tr>
        <tr>
          <th scope="row">駐車スペース</th>
          <td><%= @shop.parking_space %>台</td>
        </tr>
        <tr>
          <th scope="row">支払方法</th>
          <td><%= @shop.payment_method %></td>
        </tr>
        <tr>
          <th scope="row">喫煙禁煙</th>
          <td><%= @shop.smoking %></td>
        </tr>
        <tr>
          <th scope="row">個室有無</th>
          <td>
            <% if @shop.private_room == true %>
              有
            <% else %>
              無
            <% end %>
          </td>
        </tr>
        <tr>
          <th scope="row">整理券配布有無</th>
          <td>
            <% if @shop.private_room == true %>
              有
            <% else %>
              無
            <% end %>
          </td>
        </tr>
        <tr>
          <th scope="row">子連れ可否</th>
          <td><%= @shop.children %></td>
        </tr>
        <tr>
          <th scope="row">通常混雑状況</th>
          <td><%= @shop.wait_time %></td>
        </tr>
        <tr>
          <th scope="row">メッセージ</th>
          <td><%= @shop.introduction %></td>
        </tr>
      </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <span class="badge badge-secondary">
        <h5>コメント</h5>
      </span>
      <h6>コメント: <%= @shop.comments.count %>件</h6>
      <% @shop.comments.each do |comment| %>
      <div class="card mt-3">
        <div class="card-header">
          <h5><%= comment.customer.last_name %><%= comment.customer.first_name %></h5>
          <p class="card-text"><%= comment.created_at.strftime('%Y.%m.%d %H:%M') %></p>
        </div>
        <div class="card-body">
          <strong class="card-text"><%= comment.comment %></strong>
          <div id="rate_<%= comment.id %>"></div>
          <script>
            $('#rate_<%= comment.id %>').empty();
            $('#rate_<%= comment.id %>').raty({
              readOnly: true,
              score: "<%= comment.rate %>",
              size: 36,
              starOff: "<%= asset_path('star-off.png') %>",
              starOn: "<%= asset_path('star-on.png') %>",
            });
          </script>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row">

  </div>
</div>