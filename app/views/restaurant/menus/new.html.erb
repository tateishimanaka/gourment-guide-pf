<div class="container mb-5 pb-5">
  <div class="row">
    <h4 class="ml-5 mt-4">メニュー新規登録</h4>
  </div>
  <div class="row">
      <div class="mx-auto">
        <%= form_with model:@menu, url:restaurant_menus_path, local:true do |f| %>
        <% if @menu.errors.any? %>
          <% @menu.errors.full_messages.each do |message| %>
            <div class="text-danger">
              ※<%= message %>
            </div>
          <% end %>
        <% end %>
          <form>
            <div class="form-group mt-3">
              <label for="name">メニュー名</label><span class="text-danger">(必須)</span>
              <%= f.text_field :name, autofocus: true, placeholder: "(例)魚定食", class: "form-control" %>
            </div>
            <div class="form-growp mt-5">
              <label for="image">イメージ画像</label>
              <div class="image">
                <%= f.attachment_field :image %>
              </div>
            </div>
            <div class="form-growp mt-5">
              <label for="price">値段</label><span class="text-danger">(必須)</span>
              <div class="price">
                <%= f.text_field :price, autofocus: true, placeholder: "(例)700", class: "form-control" %>
              </div>
            </div>
            <div class="form-growp mt-5">
              <%= f.submit "登録する", class: "btn btn-outline-secondary" %>
            </div>
            <div class="form-growp mt-4">
              <%= link_to "他のメニューを見る", restaurant_menus_path %><br>
              <%= link_to "マイページに戻る", restaurant_shops_path %>
            </div>
          </form>
        <% end %>
      </div>
  </div>
</div>