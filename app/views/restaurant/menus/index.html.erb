<div class="container">
  <div class="row">
    <h3>menu一覧</h3>
  </div>
  <div class="row">
    <% @menus.each do |menu| %>
      <%= menu.name %>
      <%= menu.price %>
      <%= link_to restaurant_menu_path(menu.id) do %>
        <%= attachment_image_tag menu, :image, format: 'jpeg', size: "100x100" %>
      <% end %>
      <% if menu.is_active == true %>
        販売中
      <% else %>
      　販売中止中
      <% end %>
    <% end %>
  </div>
</div>