<div class="container mb-5 pb-5">
  <div class="row">
    <h4 class="mt-4">メニュー 一覧</h4>
    <h3 class="ml-4 mt-3">
      <%= link_to new_restaurant_menu_path, class: "nav-link text-dark" do %>
        <i class="far fa-plus-square"></i>
      <% end %>
    </h3>
  </div>
  <div class="row">
    <p>メニュー数：<%= @menus.count %></p>
  </div>
  <div class="row">
    <%= link_to "マイページに戻る", restaurant_shops_path %>
  </div>
  <div class="row mt-5">
    <% @menus.each do |menu| %>
      <div class="d-flex justify-content-start ml-3 mb-3">
        <div class="col-auto">
          <%= link_to restaurant_menu_path(menu.id), class: "text-dark nav-link" do %>
          <div class="image">
            <%= attachment_image_tag menu, :image, :fill, 200, 190, format: 'jpeg', class: "rounded" %>
          </div>
          <h6 class="mt-1">
            <%= menu.name %>
          </h6>
          <h6>
            ￥<%= menu.price.to_s(:delimited) %>
          </h6>
          <h6>
            <% if menu.is_active == true %>
              販売中
            <% else %>
            　販売中止中
            <% end %>
          </h6>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @menus %>
    </div>
  </div>
</div>