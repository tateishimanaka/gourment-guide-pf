<div class="container mt-4 mb-5 pb-5">
  <div class="row">
    <h4>メニュー 一覧</h4>
  </div>
  <div class="row">
    <p>メニュー数：<%= @menus.count %></p>
  </div>
  <div class="row">
    <%= link_to "マイページに戻る", restaurant_shops_path %>
  </div>
  <div class="row mt-5">
    <% @menus.each do |menu| %>
      <div class="d-flex justify-content-start ml-5">
        <div class="col-auto">
          <div class="image">
            <%= link_to restaurant_menu_path(menu.id) do %>
              <%= attachment_image_tag menu, :image, format: 'jpeg', size: "200x200", class: "rounded" %>
            <% end %>
          </div>
          <h6 class="mt-1">
            <%= menu.name %>
          </h6>
          <h6>
            ￥<%= menu.price.to_s(:delimited) %>
          </h6>
          <h6>
            <% if menu.is_active == true %>
              販売中
            <% else %>
            　販売中止中
            <% end %>
          </h6>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @menus %>
    </div>
  </div>
</div>