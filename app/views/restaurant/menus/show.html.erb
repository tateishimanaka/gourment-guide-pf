<div class="container">
  <div class="row">
    <h3>menu</h3>
    <%= link_to "メニュー一覧", restaurant_menus_path %>
    <%= link_to "メニュー編集", edit_restaurant_menu_path(@menu.id) %>
  </div>
  <div class="row">
     <%= attachment_image_tag @menu, :image, format: 'jpeg', size: "200x200" %>
     <%= @menu.name %>
     ￥<%= @menu.price %>
     <% if @menu.is_active == true %>
        販売中
      <% else %>
      　販売中止中
      <% end %>
  </div>
</div>