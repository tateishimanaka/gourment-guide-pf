<div class="container mb-5 pb-5">
  <div class="row mt-4 ml-4">
    <h4>Photo編集</h4>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model:@image, url:restaurant_images_path, local: true do |f| %>
        <form>
          <div class="form-growp mt-5">
            <label for="image">イメージ画像</label>
            <div class="image">
              <%= f.attachment_field :image %>
            </div>
          </div>
          <div class="form-growp mt-5">
            <label for="introduction">コメント</label>
            <div class="introduction">
              <%= f.text_field :introduction, autofocus: true, placeholder: "(例)お店の外観です", class: "form-control" %>
            </div>
              </div>
            <div class="form-growp mt-5">
              <%= f.submit "保存する", class: "btn btn-outline-secondary" %>
            </div>
            <div class="form-growp mt-2">
              <%= link_to "削除する",restaurant_image_path(@image.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-secondary" %>
            </div>
            <div class="form-growp mt-5">
              <%= link_to "他の投稿を見る", restaurant_images_path %><br>
              <%= link_to "マイページに戻る", restaurant_shops_path %>
            </div>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>