      ♡<%= shop.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to shop_favorites_path(shop), method: :post, remote: true do %>
      ♡<%= shop.favorites.count %>
    <% end %>
  <% end %>
<% end %>
