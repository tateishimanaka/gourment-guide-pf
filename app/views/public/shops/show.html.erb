<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h3><%= @shop.shop_name %></h3>
      <p><%= @shop.shop_name_kana %></p>
      <% if customer_signed_in? %>
        <% if @shop.favorited_by?(current_customer) %>
          <%= link_to shop_favorites_path(@shop), method: :delete do %>
            ♡<%= @shop.favorites.count %>
          <% end %>
        <% else %>
          <%= link_to shop_favorites_path(@shop), method: :post do %>
            ♡<%= @shop.favorites.count %>
          <% end %>
        <% end %>
      <% end %>
      ♡<%= @shop.favorites.count %>


      <P>コメント件数：<%= @shop.comments.count %></P>
      <% @shop.comments.each do |comment| %>
        <%= comment.customer.last_name %><%= comment.customer.first_name %>
        <%= comment.comment %><%= comment.created_at.strftime('%Y%m%d') %>

        <% if comment.customer == current_customer %>
          <%= link_to "削除", shop_comments_path(comment.shop, comment), method: :delete %>
        <% end %>
      <% end %>
      <% if customer_signed_in? %>
        <%= form_with(model:[@shop, @comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5', placeholder: "コメントをする" %>
          <%= f.submit "送信" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= link_to "お店一覧に戻る", shops_path %>
  </div>
</div>