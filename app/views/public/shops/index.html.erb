<div class="container">
  <div class="row">
    <h4>店舗一覧</h4>
  </div>
  <div class="row mt-5">
    <% @shops.each do |shop| %>
      <div class="d-flex justify-content-start ml-5">
        <div class="col-auto">
          <div class="card" style="width: 14rem;">
            <%= attachment_image_tag shop, :image, :fill, 150, 150, format: 'jpeg', class: "rounded" %>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to shop_path(shop.id) do %>
                  <%= shop.shop_name %>
                <% end %>
              </h5>
              <p class="card-text">
                <%= shop.shop_name_kana %>
              </p>
              <p class="card-text">
                <h5 id="favorite_buttons_<%= shop.id %>">
                  <%= render 'public/favorites/favorite', shop: shop %>
                </h5>
              </p>
            </div>
          </div>
         </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @shops %>
    </div>
  </div>
</div>