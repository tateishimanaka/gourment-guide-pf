<div class="container mb-5 pb-5">
  <div class="row">
    <h4 class="mt-4 ml-4">
      一般会員ログイン画面
    </h4>
  </div>
  <p class="ml-4">会員登録がまだの方は<%= link_to "こちら", new_customer_registration_path %></p>
  <div class="row mt-4">
    <div class="mx-auto">
      <%= form_with model: @customer, url: customer_session_path, local:true do |f| %>
        <table>
          <tbody>
            <tr>
              <div class="form-growp mt-5 pt-5">
                <td>
                  <label for="email">メールアドレス</label>
                </td>
                <td><div class="ml-5"></div></td>
                <td>
                  <div class="mt-1">
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  </div>
                </td>
              </div>
            </tr>
            <tr>
              <div class="form-growp">
                <td>
                  <label for="password mt-3">パスワード</label>
                </td>
                <td><div class="ml-5"></div></td>
                <td>
                  <div class="mt-4">
                    <%= f.password_field :password, autofocus: true, class: "form-control" %>
                  </div>
                </td>
              </div>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>
                <div class="actions mt-3">
                  <%= f.submit "ログイン", class: "btn btn-outline-secondary" %>
                </div>
              </td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>
                <%= link_to "戻る", about_path %></p>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>