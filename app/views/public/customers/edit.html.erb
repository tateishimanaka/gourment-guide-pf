<div class="container mb-5 pb-5">
  <div class="row">
    <h4 class="ml-4 mt-4">
    　登録情報の変更
    </h4>
  </div>
  <div class="row mt-5">
    <div class="col-md-12">
      <%= form_with model: @customer, url: customers_path, local:true do |f| %>
        <form>
          <div class="form-growp row">
            <label for="name" class="col-md-3 col-form-label">名前</label>
            (姓)
            <div class="col-md-3 ml-4">
              <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
            </div>
            (名)<div class="col-md-3 ml-3">
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="name_kana" class="col-md-3 col-form-label">フリガナ</label>
              (セイ)<div class="col-md-3">
                <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
              </div>
              (メイ)<div class="col-md-3">
                <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
              </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="postal_code" class="col-md-3 col-form-label mr-4">郵便番号(ハイフンなし)</label>
            <div class="col-md-3 ml-3">
              <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="address" class="col-md-3 col-form-label mr-4">住所</label>
            <div class="col-md-5 ml-3">
              <%= f.text_field :address, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="telephone_number" class="col-md-3 col-form-label mr-4">電話番号(ハイフンなし)</label>
            <div class="col-md-3 ml-3">
              <%= f.text_field :telephone_number, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="email" class="col-md-3 col-form-label mr-4">メールアドレス</label>
            <div class="col-md-3 ml-3">
              <%= f.email_field :email, autofocus: true, placeholder: "(例)gourment@email.com", class: "form-control" %>
            </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="submit" class="col-md-3 col-form-label mr-4"></label>
            <div class="col-md-4 ml-3">
              <%= f.submit "変更内容を保存する", class: "btn btn-outline-secondary" %>
            </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="submit" class="col-md-3 col-form-label mr-4"></label>
            <div class="col-md-4 ml-3">
              <%= link_to "退会する", customer_unsubscribe_path, class: "btn btn-outline-secondary" %>
            </div>
          </div>
          <div class="form-growp row mt-4">
            <label for="submit" class="col-md-3 col-form-label mr-4"></label>
            <div class="col-md-4 ml-3">
              <%= link_to "戻る", customers_path %>
            </div>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>