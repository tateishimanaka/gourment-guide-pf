<div class="container mt-5 mb-5 pb-5">
  <div class="row">
    <h4>お問い合わせ</h4>
  </div>
<%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
  <% if @inquiry.errors.any? %>
    <% @inquiry.errors.each do |attr, msg| %>
      <div class="text-danger">
        ※<%= msg %>
      </div>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-9 offset-md-2">
      <table class="table">
        <tr>
          <th>
            名前<span class="text-danger">（必須）</span></th>
          <td>
            <div class="col-md-6">
              <%= f.text_field :name, autfocus: true, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>メールアドレス<span class="text-danger">（必須）</span></th>
          <td>
            <div class="col-md-6">
              <%= f.text_field :email, autofocus: true, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <div class="col-md-7">
              <%= f.text_area :message, autofocus: true, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit '確認', class: 'btn btn-outline-secondary' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>

</div>
