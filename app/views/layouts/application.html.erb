<!DOCTYPE html>
<html>
  <head>
    <title>GourmentGuidePf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>

    <script>
      $(document).ready(function(){
        $('.slider').bxSlider(
          minSlides: 3
          slideWidth: 640,
          auto: true,
          );
      });
    </script>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to "TOP", root_path %>
          </div>

          <ul class="navbar-nav">
            <% if customer_signed_in? %>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
              <%= link_to "My Page", customers_path %>
              <%= link_to "shop一覧", shops_path %>
              <%= render 'layouts/search', shops: @shops %>
            <% elsif shop_signed_in? %>
              <%= link_to "ログアウト", destroy_shop_session_path, method: :delete %>
              <%= link_to "shop一覧", shops_path %>
              <%= link_to "My Page", restaurant_shops_path %>
              <%= render 'layouts/search', shops: @shops %>
            <% else %>
              <%= link_to "shop一覧", shops_path %>
              <%= render 'layouts/search', shops: @shops %>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto mt-5 mb-3">
            <%= link_to "お問い合わせはこちら", inquiry_path %>
          </div>
        </div>
      </div>

    </footer>
  </body>
</html>
