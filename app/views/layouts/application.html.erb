<!DOCTYPE html>
<html>
  <head>
    <title>GourmentGuidePf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <div class="navbar-brand">
            <h1><%= link_to "Gourment Guide", root_path %></h1>
          </div>

          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <% if customer_signed_in? %>
              <strong><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %></strong>
              <%= link_to "My Page", customers_path, class: "nav-link" %>
              <%= link_to "shop一覧", shops_path, class: "nav-link" %>
              <%= render 'layouts/search', shops: @shops, class: "nav-link" %>
            <% elsif shop_signed_in? %>
              <%= link_to "ログアウト", destroy_shop_session_path, method: :delete, class: "nav-link" %>
              <%= link_to "shop一覧", shops_path, class: "nav-link" %>
              <%= link_to "My Page", restaurant_shops_path, class: "nav-link" %>
            <% else %>
              <%= link_to "shop一覧", shops_path, class: "nav-link" %>

            <% end %>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <%= render 'layouts/search', shops: @shops %>
          </form>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto mt-5 mb-3">
            <%= link_to "お問い合わせはこちら", inquiry_path %>
          </div>
        </div>
      </div>

    </footer>
  </body>
</html>
