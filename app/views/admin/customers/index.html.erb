<div class="container">
  <h3>Customer List</h3>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">NAME</th>
          <th scope="col">E-MAIL</th>
          <th scope="col">STATUS</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= customer.last_name %><%= customer.first_name %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_deleted == false %>
                会員
              <% else %>
                退会済み
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "HOME", admin_root_path %>
</div>