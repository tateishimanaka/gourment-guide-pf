<div class="container">
  <h3>Shop List</h3>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">NAME</th>
          <th scope="col">E-MAIL</th>
          <th scope="col">STATUS</th>
        </tr>
      </thead>
      <tbody>
        <% @shops.each do |shop| %>
          <tr>
            <td>
              <%= shop.id %>
            </td>
            <td>
              <%= shop.shop_name %>
            </td>
            <td>
              <%= shop.email %>
            </td>
            <td>
              <% if shop.is_deleted == false %>
              　会員
              <% else %>
                退会済み
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "HOME", admin_root_path %>
</div>