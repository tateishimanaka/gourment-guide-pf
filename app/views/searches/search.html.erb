<div class="container mt-3 mb-5 pb-5">
  <div class="row">
    <h4>Shop</h4>
  </div>
   <div class="row mt-5">
    <% @shops.each do |shop| %>
      <div class="d-flex justify-content-start ml-2">
        <div class="col-auto">
          <%= link_to shop_path(shop.id), class: "nav-link text-dark" do %>
          <div class="card" style="width: 13rem;">
            <%= attachment_image_tag shop, :image, :fill, 200, 150, format: 'jpeg', class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title">
                <%= shop.shop_name %>
              </h5>
              <p class="card-text">
                <%= shop.genre %>
              </p>
              <p class="card-text">
                <h5 id="favorite_buttons_<%= shop.id %>">
                  <%= render 'public/favorites/favorite', shop: shop %>
                </h5>
              </p>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
